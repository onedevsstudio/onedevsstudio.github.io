.container
  center(100%)
  padding-right (gutter / 2)
  padding-left (gutter / 2)
  @extend .clearfix
  +above((mtablet-md + 2))
    max-width tablet-md
  +above((desktop-lg + 2))
    max-width desktop-lg
  +above((desktop-xl + 2))
    max-width desktop-xl

.row
  margin-left -(gutter / 2)
  margin-right -(gutter / 2)
  @extend .clearfix
