.clearfix
  clearfix()

.show
  display block
  opacity 1
  visibility visible

.hide
  display none
  opacity 0
  visibility hidden

.pull
  &-left
    float left
  &-right
    float right

.video-wrapper
  position relative
  padding-bottom 56.25%
  padding-top 1.5625rem /* 25/16 */
  height 0
  object,
  embed,
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

p
  &.lead
    padding-bottom spacingLarge
    font-size: 1.25rem /* 20/16 */
    font-weight 300
    span
      margin-bottom spacingSmall
      display block

.inline-hover
  display inline-block
  transition box-shadow .2s ease-in-out
  border-bottom 1px solid rgba(linkColor, .5)
  box-shadow inset 0 -2px 0 0 rgba(linkColor, .5)
  line-height 1.2
  &:hover
    box-shadow inset 0 -10px 0 0 rgba(linkColorHover, .5)
